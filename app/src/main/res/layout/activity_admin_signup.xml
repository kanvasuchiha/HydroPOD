<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/backgr"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <EditText
            android:id="@+id/txtNameA"
            style="@android:style/Widget.EditText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/card2A"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_name"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="textPersonName"
            android:textColor="#FFFDFD"
            android:textColorHint="#EEE8E8"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerA"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/txtNameA"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:padding="2dp"></Spinner>


        <EditText
            android:id="@+id/txtDateA"
            style="@android:style/Widget.EditText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@id/spinnerA"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_dob"
            android:ems="10"
            android:hint="Date Of Birth"
            android:inputType="textPersonName"
            android:textColor="#FFFDFD"
            android:textColorHint="#EEE8E8"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/txtPhoneA"
            style="@android:style/Widget.EditText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txtDateA"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_mobile"
            android:ems="10"
            android:hint="Mobile Number"
            android:maxLength="10"
            android:inputType="phone"
            android:textColor="#FFFDFD"
            android:textColorHint="#EEE8E8"
            android:textSize="16sp" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:id="@+id/txt_emailA"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPhoneA"
            android:layout_centerHorizontal="true"
            android:textColorHint="#EEE8E8"
            app:errorEnabled="true"
            android:layout_marginTop="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtEmailSA"
                style="@android:style/Widget.EditText"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_mail"
                android:ems="10"
                android:hint="Enter valid email id"
                android:inputType="textPersonName"
                android:textColor="#FFFDFD"
                android:textColorHint="#EEE8E8"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>



        <EditText
            android:id="@+id/txtAddressA"
            style="@android:style/Widget.EditText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_emailA"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_address"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textColor="#FFFDFD"
            android:textColorHint="#EEE8E8"
            android:textSize="16sp" />



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:id="@+id/txt_passwordA"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtAddressA"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            app:counterEnabled="true"
            app:counterMaxLength="20"
            android:textColorHint="#EEE8E8"
            app:errorEnabled="true"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#EEE8E8"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtPasswordSA"
                style="@android:style/Widget.EditText"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="#11000000"
                android:drawableLeft="@drawable/ic_action_pass"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#FFFDFD"
                android:textColorHint="#EEE8E8"
                android:textSize="16sp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <EditText
            android:id="@+id/txtConfirmPasswordA"
            style="@android:style/Widget.EditText"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/txt_passwordA"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="#11000000"
            android:drawableLeft="@drawable/ic_action_pass"
            android:ems="10"
            android:hint="Re-enter Password"
            android:inputType="textPassword"
            android:textColor="#FFFDFD"
            android:textColorHint="#EEE8E8"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/txtConfirmPasswordA"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="25dp"
            android:layout_centerHorizontal="true"
            app:cardElevation="10dp"
            android:layout_marginTop="40dp"
            android:id="@+id/cardViewSA">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/cardViewS">

                <TextView
                    android:id="@+id/txtLoginSA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:onClick="confirmInput"
                    android:text="Signup"
                    android:textColor="#fff"
                    android:textSize="20dp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardViewSA"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Already registered??"
                android:textColor="#FAF4F4" />

            <Button
                android:id="@+id/btnRegisterHereSA"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Login here"
                android:textColor="#33D53A"
                android:theme="@style/FlatButton" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5A"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"
            android:backgroundTint="#11000000"
            app:cardCornerRadius="5dp"
            android:paddingTop="30dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/textView2A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="textStart"
                android:text="Team HydroPOD welcomes you. The team is always happy to see a new face. We hope to work together with you over the years and together make this company the best ever. Hope to see you around."
                android:textColor="#EEF1EE"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/divider1A"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="2dp"
            android:layout_below="@id/textView4A"
            android:layout_marginTop="7dp"
            android:background="#353852"
            android:fadingEdgeLength="20dp"
            android:elevation="0dp" />

        <TextView
            android:id="@+id/textView4A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Welcome new Admin"
            android:textColor="#ECEAEA"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider1A"
            android:layout_marginTop="10dp"
            android:textColor="#F1EAEA"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:text="Kudos!  You are just a step away from joining our team." />


    </RelativeLayout>


</ScrollView>